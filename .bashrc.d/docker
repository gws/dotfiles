# Remove container
alias dcrm="docker rm"

# Show running containers
alias dps="docker ps"

# Show latest container ID
alias dpsl="docker ps -l -q"

# Show all containers (including stopped)
alias dpsa="docker ps -a"

# Get container IP
alias dinp="docker inspect --format '{{ .NetworkSettings.IPAddress }}'"

# Get images
alias di="docker images"

# Remove image
alias dirm="docker rmi"

# Run interactive container
alias dri="docker run -i -t"

# Run interactive, ephemeral container
alias drie="docker run --rm -i -t"

# Stop all containers
function dsa() {
  docker stop $(docker ps -a -q)
}

# Dockerfile-build with tag
function dbt() {
  docker build -t=$1 .
}
